.post_form
  %h1.title_form
    - if route_is_new?(nested: true)
      - action = "/forums/#{@forum.id}/posts"
      New post
    - else
      Edit: #{@post.title}
      - action = "/posts/#{@post.id}"

  - validations_for @post

  %form.new_form{ action: action, method: "post" }
    - unless route_is_new?(nested: true)
      - form_method :put
    - if @post.root?
      - input     @post, :title
    = textarea  @post, :text

    - link_to "Help", "/help", id: "help_link"

    - submit "Save"