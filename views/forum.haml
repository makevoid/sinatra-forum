%h1.title_form
  = @forum.name

%nav.inpage
  - if logged_in?
    %a.btn{ href: "/forums/#{@forum.id}/posts/new" } New post
    - if admin?
      %a.btn{ href: "/forums/#{@forum.id}/edit" } Edit
  - else
    %a.btn{ href: "/login" } Log in to post

.posts
  - @posts.each do |post|
    = partial :post, post